#!/bin/bash
HOSTNAME=`hostname`
MACHINE=`uname -m`
OS=`uname -rs`
CPU=`uname -p`
HARDWARE=`uname -i`
PCNAME=`uname -n`

echo ------------------------------------------------------------------
echo -----------------------------pc info------------------------------
echo ------------------------------------------------------------------
echo hostname : $HOSTNAME
echo machine  : $MACHINE
echo os : $OS
echo cpu : $CPU
echo hardware : $HARDWARE
echo pc : $PCNAME
echo ------------------------------------------------------------------
echo ---------------------------end pc info----------------------------
echo ------------------------------------------------------------------

